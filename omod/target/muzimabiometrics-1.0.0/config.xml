<?xml version="1.0" encoding="UTF-8"?>

<module configVersion="1.2">

	<!-- Module Properties -->
	<id>muzimabiometrics</id>
	<name>Muzima Biometrics Module</name>
	<version>1.0.0</version>
	<package>org.openmrs.module.muzimabiometrics</package>
	<author>Muzima Team</author>
	<description>
		OpenMRS module project for Muzima Biometrics. Provides biometrics services to both OpenMRS and Muzima mobile application
	</description>
	<updateURL>https://modules.openmrs.org/modules/download/muzimabiometrics/update.rdf</updateURL>
	<require_version>1.8.2</require_version>
	<!-- / Module Properties -->

	<aware_of_modules>
		<aware_of_module version="1.0.0">org.openmrs.module.muzimacore</aware_of_module>
	</aware_of_modules>

	<extension>
		<point>org.openmrs.gutter.tools</point>
		<class>org.openmrs.module.muzimabiometrics.extension.html.MuzimaBiometricsHeader</class>
	</extension>
	
	<!-- Module Activator -->
	<activator>org.openmrs.module.muzimabiometrics.MuzimaBiometricsActivator</activator>


    <mappingFiles>
        MuzimaFingerprint.hbm.xml
		MuzimaTemporaryFingerprint.hbm.xml
    </mappingFiles>

	<!-- Adds link to admin page -->
	<extension>
		<point>org.openmrs.admin.list</point>
		<class>org.openmrs.module.muzimabiometrics.extension.html.AdminList</class>
	</extension>
	
	<!-- Maps hibernate file's, if present -->

    <require_modules>
        <require_module version="2.0">org.openmrs.module.webservices.rest</require_module>
    </require_modules>

	<!-- Internationalization -->
	<!-- All message codes should start with muzimabiometrics. -->
	<messages>
		<lang>en</lang>
		<file>messages.properties</file>
	</messages>
	<messages>
		<lang>fr</lang>
		<file>messages_fr.properties</file>
	</messages>
	<messages>
		<lang>es</lang>
		<file>messages_es.properties</file>
	</messages>
	<!-- /Internationalization -->

	<globalProperty>
		<property>mUzimabiometrics.defaultFinger</property>
		<description>This will be the default finger to be used when taking fingerprints. Accepted values are L1,L2,L3,L4,L5,R1,R2,R3,R4 or R5, where the values can be interpreted as follows (L1:Left thumb,L2:Left index finger,L3:Left middle finger,L4:Left ring finger,L5:Left Pinky/baby finger,R1:Right thumb,R2:Right index finger,R3:Right middle finger,R4:Right ring finger,R5:Right Pinky/baby finger)</description>
		<defaultValue>L1</defaultValue>
	</globalProperty>
	<globalProperty>
		<property>mUzimabiometrics.defaultMinimumFingerprintQuality</property>
		<description>This will be the default minimum fingerprint Quality. Fingerprint with less than this quality will not be accepted. Accepted values range from 0 to 100</description>
		<defaultValue>70</defaultValue>
	</globalProperty>

</module>

